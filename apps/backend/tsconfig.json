{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2016",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "shared": ["../packages/shared/src"],
      "api-types": ["../packages/api-types/src"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}